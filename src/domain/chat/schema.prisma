generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_PRISMA_URL")
}

enum Sender {
    USER
    AI
}

model Chat {
    id        String    @id @default(uuid())
    title     String
    userEmail String
    messages  Message[]
    createdAt DateTime  @default(now())
}

model Message {
    id        String   @id @default(uuid())
    chat      Chat     @relation(fields: [chatId], references: [id])
    chatId    String
    sender    Sender
    content   String
    timestamp DateTime @default(now())
}
